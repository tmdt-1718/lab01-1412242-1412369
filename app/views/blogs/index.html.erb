<div class="blogs-main">
  <h3>All blogs </h3>
  <hr>
<%  @blogs.each do | blog | %>
<div class="blogs">
  <div class="col-md-3">
  <img src="<%=blog.cover%>" alt="">
  </div>
  <div class="content">
    <h4><%= link_to blog.title.truncate(50, omission: '... (continued reading)'), blog_path(blog.id)%></h4>
    <div class="row">
      <i class="fa fa-calendar" style="margin-right:15px;" aria-hidden="true"></i>
      <%=blog.created_at.strftime("%d - %m - %Y")%>
    </div>
    <div class="row">
      <p>
        <%=blog.content%>
      </p>
    </div>
  </div>
</div>
<% end %>
</div>
