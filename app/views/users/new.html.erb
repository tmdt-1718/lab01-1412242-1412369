<ol class="breadcrumb bg-light">
      <li class="breadcrumb-item"><a href="../Home">Home</a></li>
      <li class="breadcrumb-item active">Register</li>
</ol>
<div class="row">
    <div class="col-sm-1 col-md-1 col-lg-1 col-xl-1">
    </div>
  <div class="col-sm-11 col-md-11 col-lg-11 col-xl-11">
    <%= form_for (@user) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "col-sm-3 col-md-3 col-lg-3 col-xl-3 control-label" %>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter user name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password", class: "col-sm-3 col-md-3 col-lg-3 col-xl-3 control-label" %>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation", class: "col-sm-3 col-md-3 col-lg-3 col-xl-3 control-label" %>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 py-3">
          <%= f.submit "Register", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>